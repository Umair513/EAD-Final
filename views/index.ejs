<%- include("./partials/header.ejs") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add new Recippe</h2>
      <form method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Title</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Description</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Ingredients</label>
          <input type="text" class="form-control" id="fees" name="fees" />
        </div>
        <div class="mb-3">
          <label for="fees" class="form-label">Instructions</label>
          <input type="text" class="form-control" id="fees" name="fees" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Recipies</h2>
      <%# Show All Data %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Ingredients</th>
            <th scope="col">Instructions</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i = 1 %> <% data.forEach((item) => { %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name%></td>
            <td><%= item.age%></td>
            <td><%= item.fees%></td>
            <td>
              <form
                action="/student/edit/<%= item._id%>"
                method="get"
                class="d-inline"
              >
                <button type="submit" class="btn">
                  <i class="fas fa-pen-square text-info"></i>
                </button>
              </form>

              <form
                action="/student/delete/<%= item._id%>"
                method="post"
                class="d-inline"
              >
                <button type="submit" class="btn">
                  <i class="fas fa-trash text-danger"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
